{
  "name": "pos-frontend",
  "productName": "OmniPOS",
  "description": "OmniPOS - Modern Point of Sale System",
  "author": {
    "name": "OmniPOS Team",
    "email": "team@omnipos.com"
  },
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "desktop/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron .",
    "electron": "wait-on http://localhost:5173 && electron . --no-sandbox --disable-setuid-sandbox",
    "dev:electron": "concurrently \"pnpm dev\" \"pnpm electron\"",
    "dist": "pnpm build && electron-builder",
    "drizzle:generate": "drizzle-kit generate --config ./desktop/src/drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config ./desktop/src/drizzle.config.ts"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@cloudinary/react": "^1.14.3",
    "@cloudinary/url-gen": "^1.22.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@libsql/client": "^0.17.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.12",
    "@zxing/library": "^0.21.3",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.27.1",
    "laravel-echo": "^2.2.6",
    "lucide-react": "^0.562.0",
    "papaparse": "^5.5.3",
    "pusher-js": "^8.4.0",
    "quagga": "^0.12.1",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^7.11.0",
    "react-to-print": "^3.2.0",
    "recharts": "^3.6.0",
    "shadcn": "^3.6.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "electron": "39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "build": {
    "appId": "com.omnipos.pos",
    "productName": "OmniPOS",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "desktop/assets"
    },
    "files": [
      "dist/**/*",
      "desktop/**/*",
      "package.json",
      "!node_modules"
    ],
    "asarUnpack": [
      "node_modules/@libsql/*/bindings/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "desktop/assets/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "desktop/assets/icon.icns",
      "category": "public.app-category.business"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}